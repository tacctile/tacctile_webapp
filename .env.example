# Tacctile WebApp Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# FIREBASE AUTHENTICATION
# =============================================================================
# Get these from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# =============================================================================
# STRIPE BILLING
# =============================================================================
# Get these from Stripe Dashboard > Developers > API keys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Price IDs from Stripe Dashboard > Products
VITE_STRIPE_PRO_MONTHLY_PRICE_ID=price_...
VITE_STRIPE_PRO_YEARLY_PRICE_ID=price_...

# Customer Portal URL (optional, for managing subscriptions)
VITE_STRIPE_CUSTOMER_PORTAL_URL=

# =============================================================================
# SUPABASE DATABASE
# =============================================================================
# Get these from Supabase Dashboard > Settings > API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...

# =============================================================================
# CLOUD STORAGE PROVIDERS
# =============================================================================

# Google Drive
# Get from Google Cloud Console > APIs & Services > Credentials
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
VITE_GOOGLE_API_KEY=

# Dropbox
# Get from Dropbox App Console > Settings
VITE_DROPBOX_CLIENT_ID=
VITE_DROPBOX_REDIRECT_URI=http://localhost:3000/auth/dropbox/callback

# OneDrive (Microsoft)
# Get from Azure Portal > App registrations
VITE_ONEDRIVE_CLIENT_ID=
VITE_ONEDRIVE_REDIRECT_URI=http://localhost:3000/auth/onedrive/callback

# =============================================================================
# AI / GEMINI
# =============================================================================
# Get from Google AI Studio > Get API Key
VITE_GEMINI_API_KEY=
VITE_GEMINI_MODEL=gemini-1.5-flash
VITE_GEMINI_MAX_OUTPUT_TOKENS=8192
VITE_GEMINI_TEMPERATURE=0.7

# =============================================================================
# ERROR TRACKING
# =============================================================================
# Sentry DSN for error tracking (production)
VITE_SENTRY_DSN=

# =============================================================================
# APP CONFIGURATION
# =============================================================================
VITE_APP_VERSION=1.0.0
VITE_BASE_URL=http://localhost:3000
VITE_API_URL=https://api.tacctile.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_AI_SUMMARIZATION=true
VITE_ENABLE_REALTIME_COLLAB=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG=false

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
