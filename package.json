{
  "name": "ghost-hunter-toolbox",
  "productName": "Ghost Hunter Toolbox",
  "version": "1.0.0",
  "description": "Professional ghost hunting evidence analysis and investigation management desktop application",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:win": "electron-forge make --platform win32",
    "make:mac": "electron-forge make --platform darwin",
    "make:linux": "electron-forge make --platform linux",
    "make:all": "npm run make:win && npm run make:mac && npm run make:linux",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check",
    "clean": "rimraf out .vite",
    "rebuild": "npm run clean && npm run make"
  },
  "keywords": [
    "ghost",
    "hunting",
    "paranormal",
    "investigation",
    "evidence",
    "analysis",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "Tacctile",
    "email": "tacctile@users.noreply.github.com",
    "url": "https://github.com/tacctile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tacctile/tacctile_desktop.git"
  },
  "bugs": {
    "url": "https://github.com/tacctile/tacctile_desktop/issues"
  },
  "homepage": "https://github.com/tacctile/tacctile_desktop#readme",
  "license": "MIT",
  "build": {
    "appId": "com.tacctile.ghosthunter",
    "productName": "Ghost Hunter Toolbox",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      ".vite/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable"
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "protocols": [
      {
        "name": "Ghost Hunter Protocol",
        "schemes": [
          "ghost-hunter"
        ]
      }
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/multer": "^2.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "electron": "38.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "google-fonts-helper": "^3.7.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^5.0.10",
    "typescript": "~4.5.4",
    "uuid": "^13.0.0",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@google/generative-ai": "^0.24.1",
    "@material/material-color-utilities": "^0.3.0",
    "@mui/icons-material": "^7.3.2",
    "dotenv": "^17.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "exif-js": "^2.3.0",
    "gl-matrix": "^3.4.4",
    "lamejs": "^1.2.1",
    "multer": "^2.0.2",
    "peaks.js": "^3.4.2",
    "pixi.js": "^8.13.2",
    "react-material-web-components": "^0.3.2",
    "recorder-js": "^1.0.7",
    "sharp": "^0.34.3",
    "tone": "^15.1.22",
    "wavesurfer.js": "^7.10.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
